@using System.Activities.Expressions
@model Vidly.Models.NewCustomerViewModel
@{
    ViewBag.Title = "New";
    Layout = "~/Views/Shared/_Layout.cshtml";

}

<h2>New Member</h2>
@using (Html.BeginForm("Creat", "Customer"))
{
    <div class="form-group input-group-sm">
        @Html.LabelFor(m => m.Customer.Name)
        @Html.TextBoxFor(m=>m.Customer.Name,new {@class = "form-control"} )
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.BirthDate)
        @Html.TextBoxFor(m=>m.Customer.BirthDate,new {@class = "form-control" } )
    </div>
    <div class="checkbox">
        <label>
            @Html.CheckBoxFor(m=> m.Customer.IsSubscribeToNewsLetter)Subscribe To News Letter?
        </label>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Customer.MembershipTypeId)
        @Html.DropDownListFor(m=>m.Customer.MembershipTypeId,new SelectList(Model.MembershipTypes,"Id", "MembershipName"),"Select an Item", new {@class = "form-control"})
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
}

